---
export interface Props {
  size?: number;
  radius?: number;
  offsetX?: number;
  offsetY?: number;
}

const { size = 16, radius = 1, offsetX = 0, offsetY = 0 } = Astro.props;
---

<svg
  class="absolute inset-0 -z-10 size-full mask-[radial-gradient(white,transparent_85%)] fill-white/5"
>
  <defs>
    <pattern
      id="dot-pattern"
      width={size}
      height={size}
      patternUnits="userSpaceOnUse"
      patternContentUnits="userSpaceOnUse"
      x={offsetX}
      y={offsetY}
    >
      <circle cx={size / 2} cy={size / 2} r={radius}></circle>
    </pattern>
  </defs>

  <rect width="100%" height="100%" stroke-width="0" fill="url(#dot-pattern)"
  ></rect>
</svg>
